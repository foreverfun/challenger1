extends layout
block css
  link(rel="stylesheet", href="../css/main.css")
    
block content
  div.index-page

    div.index-header
      img(src="images/banner.jpg")
    
    div.index-content

      nav.navbar.navbar-default.navbar-inverse.index-nav
        div.container-fluid
            ul.nav.navbar-nav.navbar-right
              li.active
                a(href="/") Players
              li
                a(href="/messages") Messages
              li
                a(href="profile") Profile
              li 
                a(href="/auth/logout") Log Out

      //- Player List
      div.playersection
        div.players 
        table.table
          tr
            td(align="right")
              p.filterplayers.button.btn.btn-primary(type="button" data-toggle="modal") Filter
        
        table.table.table-bordered
          tr
            for player in players
              td(align="center")
                div.player(data-playerid="#{player._id}")
                  img(src="/images4demo/#{player.image}" height="100px")
                  .line 
                    strong #{player.username}
                  .line 
                    strong #{player.name}  
                  .line 
                    a.viewplayer(href="#") View Profile 
                  .line
                    a.compilemsg(href="#") Send Message
  
        //- Message 
        table.table
          tr
            td(align="center")
              p.broadcast.button.btn.btn-primary(type="button" data-toggle="modal") Broadcast    

  //- View A Player
  #viewplayer-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal")
            span &times;
          h4.modal-title View a Player
        .modal-body
          img.playerpic(width="150px")
          hr
          p
            lable Username:
            | &nbsp; 
            label.player-username
          p
            lable Name: 
            | &nbsp;
            label.player-name  
          p
            label Age:
            | &nbsp;
            label.player-age
          p
            label Gender:
            | &nbsp;
            label.player-gender 
          p
            label NTRP:
            | &nbsp;
            label.player-ntrp
          p
            label Location:
            | &nbsp;
            label.player-location
        .modal-footer
          button.btn.btn-primary.compilemsg(type="button") Send Message
          button.btn.btn-default.removepic(data-dismiss="modal") Close

  //- Filter Players
  #filterplayers-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal")
            span &times;
          h4.modal-title View a Player
        .modal-body
          p
            label Gender:  
              select.filter-gender
                option(value="1") Male
                option(value="0") Female
                option(value="2" selected="selected") Any
          table 
            tr
              td
                label NTRP:  
              td
                input(type="checkbox" name="ntrp[]" value="1.5") 
                | &nbsp;
                label 1.5 | Absolute Beginner
              td
                input(type="checkbox" name="ntrp[]" value="2.0") 
                | &nbsp;
                label 2.0 | Beginner
              td
                input(type="checkbox" name="ntrp[]" value="2.0") 
                | &nbsp;
                label 2.5 | Beginner
            tr
              td
              td  
                input(type="checkbox" name="ntrp[]" value="3.0") 
                | &nbsp;
                label 3.0 | Intermediate
 
              td
                input(type="checkbox" name="ntrp[]" value="3.5") 
                | &nbsp;
                label 3.5 | Intermediate
              td  
                input(type="checkbox" name="ntrp[]" value="4.0") 
                | &nbsp;
                label 4.0 | Intermediate
            tr
              td
              td
                input(type="checkbox" name="ntrp[]" value="4.5") 
                | &nbsp;
                label 4.5 | Advance
              td
                input(type="checkbox" name="ntrp[]" value="5.0") 
                | &nbsp;
                label 5.0 | Advance
              td
                input(type="checkbox" name="ntrp[]" value="5.5") 
                | &nbsp;
                label 5.5 | Advance
            tr
              td
              td
                input(type="checkbox" name="ntrp[]" value="6.0") 
                | &nbsp;
                label 6.0 or Above | Pro
              td
          p
            label Location:  
            | 
            input.filter-location(type="string" value="#{user.location}")
        .modal-footer
          button.btn.btn-primary.runfilterplayers(type="button") Run
          button.btn.btn-default(data-dismiss="modal") Close

    
    
    //- Compile A Message
    #compilemsg-modal.modal.fade
      .modal-dailog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal")
              span &times;
            h4.modal-title Compile A Message
          .modal-body
            .form-group.hidden
              label Invite:
                input.msg-inviteid.form-control(type="text")
            .form-group
              label Be Invited:
                input.msg-beinvitedid.form-control(type="text")
            .form-group
              label Court Name:
                input.msg-courtname.form-control(type="text")
            .form-group
              label Court Address:
                input.msg-courtaddress.form-control(type="text")
            .form-group
              label Date:
                input.msg-playdate.form-control(type="date")
            .form-group
              label Time:
                input.msg-playtime.form-control(type="time")
            .form-group
              label Message: 
                textarea.msg-content.form-control(rows='4', cols='50') 
          .modal-footer
            button.btn.btn-primary.sendmsg(type="button") Send Message
            button.btn.btn-default(data-dismiss="modal") Close


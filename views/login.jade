extends layout
block css
  link(rel="stylesheet", href="../css/login.css")

block content
  //- Existing Player
  div.loginform
    form(action="/auth/login", method="post")
      .form-group
        label
          input.form-control(type="text", name="username", placeholder="Username")
      .form-group
        label
          input.form-control(type="password", name="password", placeholder="Password")
      .form-group
        input.btn.btn-primary(type="submit" value="Sign in")
      .form-group
        a(href="/signup") Create an account  
    if error
      h5= error